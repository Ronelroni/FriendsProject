<p id="notice"><%= notice %></p>
<div class="text-center">
  <h2>Mes Favorites</2>
</div>

<div style="margin-top: 50px;">

<div class="row">
  <% @favorites.each do |favori| %>
  
 
  <div class="col-md-4">
    
  </div>

  <div class="col-md-5 mb-3">
      <div class="card mb-3">

    <p class="card-text mt-3">
        &nbsp;&nbsp;&nbsp;
      <i class="fas fa-user"></i>
        &nbsp;
        <% @favorites.each do |usere| %>
          <% if favori.user_id == usere.id %>
              <%= usere.name %>
          <% end %>
        <% end %>
        </p>
        <div class="card-body">
          <img
            src="<%= favori.publication.image %>"
            class="card-img-top"
            alt="..."
          />
        </div>
        <div class="text-center">
          <%= favori.publication.content %><br>
        </div><br>
        <div class="card-footer"></div>
          <div class="flex text-center">
            <% if favori.publication.user_id == current_user.id %>
              <%= link_to 'Voir', publication %>||
              <%= link_to 'Modifier', edit_publication_path(publication) %> ||
              <%= button_to 'Supprimer', publication, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
              <%= link_to 'Voir', favori.publication %>||
            <% end %>
          </div>
    <div class="card-body">
      
      <p class="card-text text-center" style="margin-top: -15px;">
       
      <div class="row">
        <div class="col-6 ">
          <p class="card-text">
            <small class="text-muted">Publi√© le <%= favori.created_at %></small>
          </p>
          <br>
        </div>
        
      </div>

    </div> 
  </div>

</div>

<% end %>

</div>
